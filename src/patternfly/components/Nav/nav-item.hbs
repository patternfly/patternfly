<li class="pf-c-nav__item
  {{~#if nav-item--expandable}} pf-m-expandable{{/if}}
  {{#unless nav-item--IsFlyout}}
    {{~#if nav-item--expanded}} pf-m-expanded{{/if}}
  {{/unless}}
  {{~#if nav-item--current}} pf-m-current{{/if}}
  {{~#if nav-item--IsDrilldown}} pf-m-drilldown{{/if}}
  {{~#if nav-item--IsFlyout}} pf-m-flyout{{/if}}
  {{~#if nav-item--modifier}} {{nav-item--modifier}}{{/if}}"
  {{#if nav-item--attribute}}
    {{{nav-item--attribute}}}
  {{/if}}>
  {{> @partial-block}}
</li>

{{setTag nav-item--expandable 'button' 'a'}}

<{{tag}}{{#unless nav-item--expandable}} href="{{ternary nav-link--href nav-link--href '#'}}"{{/unless}} class="{{pfv}}nav__link
  {{setModifiers
    nav-link--current='pf-m-current'
    nav-link--IsHover='pf-m-hover'
    nav-link--modifier=nav--modifier
  }}"
  {{#if nav-link--current}}
    aria-current="page"
  {{/if}}
  {{#if nav-item--IsFlyout}}
    aria-haspopup="true"
  {{/if}}
  {{#ifAny nav-item--IsFlyout nav-item--IsDrilldown nav-item--expandable}}
    {{#if nav-item--expanded}}
      aria-expanded="true"
    {{else}}
      aria-expanded="false"
    {{/if}}
  {{/ifAny}}
  {{#if nav-link--attribute}}
    {{{nav-link--attribute}}}
  {{/if}}>
  {{#if nav-item--IsDrillup}}
    {{> nav-toggle nav-toggle--modifier="pf-m-start"}}
  {{/if}}
  {{#if nav-link--text}}
    {{{nav-link--text}}}
  {{else if nav-item--HasTextWrapper}}
    {{> nav-link-text}}
  {{else if @partial-block}}
    {{> @partial-block}}
  {{/if}}
  {{#ifAny nav-item--expandable nav-item--IsFlyout nav-item--IsDrilldown}}
    {{> nav-toggle}}
  {{/ifAny}}
</{{tag}}>

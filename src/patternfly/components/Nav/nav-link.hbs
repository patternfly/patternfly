{{setTag nav-item--IsExpandable 'button' 'a'}}

<{{tag}}{{#unless nav-item--IsExpandable}} href="{{ternary nav-link--href nav-link--href '#'}}"{{/unless}} class="{{pfv}}nav__link
  {{setModifiers
    nav-link--current='pf-m-current'
    nav-link--IsCurrent='pf-m-current'
    nav-link--IsHover='pf-m-hover'
    nav-link--modifier=nav--modifier
  }}"
  {{#ifAny nav-link--current nav-link--IsCurrent}}
    aria-current="page"
  {{/ifAny}}
  {{#if nav-link--aria-label}}
    aria-label="{{nav-link--aria-label}}"
  {{/if}}
  {{#if nav-item--IsFlyout}}
    aria-haspopup="true"
  {{/if}}
  {{#ifAny nav-item--IsFlyout nav-item--IsDrilldown nav-item--IsExpandable}}
    {{#if nav-item--IsExpanded}}
      aria-expanded="true"
    {{else}}
      aria-expanded="false"
    {{/if}}
  {{/ifAny}}
  {{#if nav-link--attribute}}
    {{{nav-link--attribute}}}
  {{/if}}>
  {{#if nav-link--icon}}
    {{> nav-link-icon}}
  {{/if}}
  {{#if nav-link--text}}
    {{> nav-link-text}}
  {{else if @partial-block}}
    {{#> nav-link-text}}
      {{> @partial-block}}
    {{/nav-link-text}}
  {{/if}}
  {{#ifAny nav-item--IsExpandable nav-item--IsFlyout nav-item--IsDrilldown}}
    {{> nav-toggle}}
  {{/ifAny}}
</{{tag}}>

{{#if tree-view-node--HasCheckbox}}
  {{> __tree-view-node tree-view-node--type="label" tree-view-node--IsSelectable=tree-view-list-item--IsExpandable}}
{{else if tree-view-node--IsSelectable}}
  {{> __tree-view-node tree-view-node--type="div"}}
{{else}}
  {{> __tree-view-node}}
{{/if}}

{{#* inline "__tree-view-node"}}
  <{{# if tree-view-node--type}}{{tree-view-node--type}}{{else}}button{{/if}} class="pf-c-tree-view__node
    {{~#if tree-view-node--IsSelectable}} pf-m-selectable{{/if}}
    {{#if tree-view-node--modifier}} {{tree-view-node--modifier}}{{/if}}"
    {{#if tree-view-node--type}}
      tabindex="0"
    {{/if}}
    {{#if tree-view-node--HasCheckbox}}
      for="check-{{tree-view-node--id}}"
    {{else if tree-view-node--IsSelectable}}
      id="node-{{tree-view-node--id}}"
      aria-label="Select"
      aria-labelledby="node-{{tree-view-node--id}} text-{{tree-view-node--id}}"
    {{/if}}
    {{#if tree-view-node--attribute}}
      {{{tree-view-node--attribute}}}
    {{/if}}>
    {{#> tree-view-node-container}}
      {{#if tree-view-list-item--IsExpandable}}
        {{> tree-view-node-toggle tree-view-node-toggle--IsToggle=(concat tree-view-node--IsSelectable tree-view-node--HasCheckbox)}}
      {{/if}}
      {{#if tree-view-node--HasFolderIcon}}
        {{> tree-view-node-icon tree-view-node-icon--IsFolder="true"}}
      {{/if}}
      {{#if tree-view-node--HasCheckbox}}
        {{> tree-view-node-check}}
      {{/if}}
      {{#if tree-view-node--text}}
        {{#> tree-view-node-text}}
          {{{tree-view-node--text}}}
        {{/tree-view-node-text}}
      {{/if}}
      {{#if @partial-block}}
        {{> @partial-block}}
      {{/if}}
    {{/tree-view-node-container}}
  </{{# if tree-view-node--type}}{{tree-view-node--type}}{{else}}button{{/if}}>
{{/inline}}
{{#> notification-drawer-task-list}}

  {{#> notification-drawer-task-list-item notification-drawer-task-list-item--IsHoverable="true"}}
    {{#> notification-drawer-task-list-item-title}}
      hover action with progress bar status
    {{/notification-drawer-task-list-item-title}}
    {{#> notification-drawer-task-list-item-hover-action}}
      Cancel
    {{/notification-drawer-task-list-item-hover-action}}
    {{#> notification-drawer-task-list-item-status}}
      {{#> progress
        progress__value="10"
        progress--modifier="pf-m-sm pf-m-singleline"
        progress--no-measure="true"
        progress__id=(concat notification-drawer-task-group--id '-progress-task-1')
        progress--attribute='style="min-width: 80px;"'
        progress-bar--attribute='aria-label="progress bar for the first task"'
      }}
      {{/progress}}
    {{/notification-drawer-task-list-item-status}}
  {{/notification-drawer-task-list-item}}

  {{#> notification-drawer-task-list-item notification-drawer-task-list-item--IsHoverable="true"}}
    {{#> notification-drawer-task-list-item-title}}
      hover action with progress bar status
    {{/notification-drawer-task-list-item-title}}
    {{#> notification-drawer-task-list-item-hover-action}}
      Cancel
    {{/notification-drawer-task-list-item-hover-action}}
    {{#> notification-drawer-task-list-item-status}}
      {{#> progress
        progress__value="80"
        progress--modifier="pf-m-sm pf-m-singleline pf-m-inside"
        progress--no-measure="true"
        progress__id=(concat notification-drawer-task-group--id '-progress-task-2')
        progress--attribute='style="min-width: 80px;"'
        progress-bar--attribute='aria-label="progress bar for the second task"'
      }}
      {{/progress}}
    {{/notification-drawer-task-list-item-status}}
  {{/notification-drawer-task-list-item}}

  {{#> notification-drawer-task-list-item notification-drawer-task-list-item--modifier="pf-m-success" notification-drawer-task-list-item--IsHoverable="true"}}
    {{#> notification-drawer-task-list-item-title}}
      hover action with icon status
    {{/notification-drawer-task-list-item-title}}
    {{#> notification-drawer-task-list-item-hover-action}}
      Cancel
    {{/notification-drawer-task-list-item-hover-action}}
    {{#> notification-drawer-task-list-item-status}}
      <i class="fas fa-check-circle" aria-hidden="true"></i>
    {{/notification-drawer-task-list-item-status}}
  {{/notification-drawer-task-list-item}}

  {{#> notification-drawer-task-list-item notification-drawer-task-list-item--modifier="pf-m-danger" notification-drawer-task-list-item--IsHoverable="true"}}
    {{#> notification-drawer-task-list-item-title}}
      hover action with icon status
    {{/notification-drawer-task-list-item-title}}
    {{#> notification-drawer-task-list-item-hover-action}}
      Cancel
    {{/notification-drawer-task-list-item-hover-action}}
    {{#> notification-drawer-task-list-item-status}}
      <i class="fas fa-exclamation-circle" aria-hidden="true"></i>
    {{/notification-drawer-task-list-item-status}}
  {{/notification-drawer-task-list-item}}

{{/notification-drawer-task-list}}

{{#> notification-drawer-task-list}}

  {{#> notification-drawer-task-list-item}}
    {{#> notification-drawer-task-list-item-title}}
      icon status with dropdown actions
    {{/notification-drawer-task-list-item-title}}
    {{#> notification-drawer-task-list-item-status}}
      <i class="fas fa-check-circle" aria-hidden="true"></i>
    {{/notification-drawer-task-list-item-status}}
    {{#> notification-drawer-task-list-item-action}}
      {{> dropdown dropdown--id=(concat notification-drawer--id 'dropdown-kebab-2') dropdown-toggle--IsPlain="true" dropdown-menu--modifier="pf-m-align-right"}}
    {{/notification-drawer-task-list-item-action}}
  {{/notification-drawer-task-list-item}}

  {{#> notification-drawer-task-list-item}}
    {{#> notification-drawer-task-list-item-title}}
      progress bar status with dropdown actions
    {{/notification-drawer-task-list-item-title}}
    {{#> notification-drawer-task-list-item-status}}
      {{#> progress
        progress__value="33"
        progress--modifier="pf-m-sm pf-m-singleline"
        progress--no-measure="true"
        progress__id="progress-task-1"
      }}
      {{/progress}}
    {{/notification-drawer-task-list-item-status}}
    {{#> notification-drawer-task-list-item-action}}
      {{> dropdown dropdown--id=(concat notification-drawer--id 'dropdown-kebab-1') dropdown-toggle--IsPlain="true" dropdown-menu--modifier="pf-m-align-right"}}
    {{/notification-drawer-task-list-item-action}}
  {{/notification-drawer-task-list-item}}

{{/notification-drawer-task-list}}

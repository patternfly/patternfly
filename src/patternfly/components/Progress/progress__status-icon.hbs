{{!-- This provides the success or danger icon --}}
{{#if pf-c-progress--success}}
  <span class="pf-c-progress__status-icon pf-m-success"><i class="fas fa-check-circle"></i></span>
{{/if}}
{{#if pf-c-progress--danger}}
  <span class="pf-c-progress__status-icon pf-m-danger"><i class="fas fa-times-circle"></i></span>
{{/if}}
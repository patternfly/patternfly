<li class="pf-c-progress-stepper__step
{{~#if progress-stepper-step--modifier}} {{progress-stepper-step--modifier}}{{/if}}
{{~#if progress-stepper-step--IsCurrent}} pf-m-current{{/if}}
{{~#if progress-stepper-step--IsComplete}} pf-m-success{{/if}}
{{~#if progress-stepper-step--IsIssue}} pf-m-warning{{/if}}
{{~#if progress-stepper-step--IsFailure}} pf-m-danger{{/if}}
{{~#if progress-stepper-step--IsInProgress}} pf-m-info{{/if}}

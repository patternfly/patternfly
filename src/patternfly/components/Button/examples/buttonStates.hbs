<div class="pf-l-level">
<div class="pf-l-stack">
    {{#> button btnClass="pf-is-primary"}}
        Primary
    {{/button}}
    {{#> button btnClass="pf-is-primary pf-has-focus"}}
        Primary Focus
    {{/button}}
    {{#> button btnClass="pf-is-primary pf-is-active" btnAriaPressed="true"}}
        Primary Active
    {{/button}}
    {{#> button btnClass="pf-is-primary pf-is-disabled" btnTabIndex="-1" btnAriaDisabled="true"}}
        Primary Disabled
    {{/button}}
</div>
<div class="pf-l-stack">
    {{#> button btnClass="pf-is-secondary"}}
        Secondary
    {{/button}}
    {{#> button btnClass="pf-is-secondary pf-has-focus"}}
        Secondary Focus
    {{/button}}
    {{#> button btnClass="pf-is-secondary pf-is-active" btnAriaPressed="true"}}
        Secondary Active
    {{/button}}
    {{#> button btnClass="pf-is-secondary pf-is-disabled" btnTabIndex="-1" btnAriaDisabled="true"}}
        Secondary Disabled
    {{/button}}
</div>
<!-- inline style is to enable display of secondary-alt button on a dark background only -->
<div class="pf-l-stack"  style="background-color: black; padding: 1em .5em; margin: 1em;">
    {{#> button btnClass="pf-is-secondary-alt"}}
        Secondary - alt
    {{/button}}
    {{#> button btnClass="pf-is-secondary-alt pf-has-focus"}}
        Secondary - alt Focus
    {{/button}}
    {{#> button btnClass="pf-is-secondary-alt pf-is-active" btnAriaPressed="true"}}
        Secondary - alt Active
    {{/button}}
    {{#> button btnClass="pf-is-secondary-alt pf-is-disabled" btnTabIndex="-1" btnAriaDisabled="true"}}
        Secondary - alt Disabled
    {{/button}}
</div>
<div class="pf-l-stack">
    {{#> button btnClass="pf-is-tertiary"}}
        Tertiary
    {{/button}}
    {{#> button btnClass="pf-is-tertiary pf-has-focus"}}
        Tertiary Focus
    {{/button}}
    {{#> button btnClass="pf-is-tertiary pf-is-active" btnAriaPressed="true"}}
        Tertiary Active
    {{/button}}
    {{#> button btnClass="pf-is-tertiary pf-is-disabled" btnTabIndex="-1" btnAriaDisabled="true"}}
        Tertiary Disabled
    {{/button}}
</div>
<div class="pf-l-stack">
    {{#> button btnClass="pf-is-danger"}}
        Danger
    {{/button}}
    {{#> button btnClass="pf-is-danger pf-has-focus"}}
        Danger Focus
    {{/button}}
    {{#> button btnClass="pf-is-danger pf-is-active" btnAriaPressed="true"}}
        Danger Active
    {{/button}}
    {{#> button btnClass="pf-is-danger pf-is-disabled" btnTabIndex="-1" btnAriaDisabled="true"}}
        Danger Disabled
    {{/button}}
</div>
</div>

<button class="pf-c-button{{#if button--IsExpanded}} pf-m-expanded{{/if}}{{#if button--IsProgress}} pf-m-progress{{/if}}{{#if button--IsInProgress}} pf-m-in-progress{{/if}}{{#if button--modifier}} {{button--modifier}}{{/if}}"
  {{#if button--IsSubmit}}
    type="submit"
  {{else if button--IsReset}}
    type="reset"
  {{else}}
    type="button"
  {{/if}}
  {{#if button--IsExpanded}}
    aria-expanded="true"
  {{/if}}
  {{#if button--attribute}}
    {{{button--attribute}}}
  {{/if}}>
  {{#if button--IsInProgress}}
    {{> button-progress}}
  {{/if}}
  {{> @partial-block}}
</button>

<{{#if masthead--type}}{{masthead--type}}{{else}}header{{/if}}
  class="{{pfv}}masthead
  {{~#ifEquals masthead--ColorVariant "light"}}
    pf-m-light
  {{else ifEquals masthead--ColorVariant "light-200"}}
    pf-m-light-200
  {{/ifEquals}}
  {{~#if masthead--modifier}}
    {{masthead--modifier}}
  {{/if}}"
  {{#if masthead--id}}
    id="{{masthead--id}}"
  {{/if}}
  {{#if masthead--attribute}}
    {{{masthead--attribute}}}
  {{/if}}>
  {{> @partial-block}}
</{{#if masthead--type}}{{masthead--type}}{{else}}header{{/if}}>

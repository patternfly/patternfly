{{#> table table--expandable="true" table--attribute='aria-labelledby="expandable-table-caption"'}}
  {{#> table-caption table-caption--modifier="pf-u-sr-only" table-caption--attribute='id="expandable-table-caption"'}}
    Expandable table example
  {{/table-caption}}
  {{#> table-thead}}
    {{#> table-th table-th--blank="true"}}
    {{/table-th}}    
    {{#> table-th table-th--check="true"}}
      <input class="pf-c-check" type="checkbox" name="check all rows" aria-label="check rows">
    {{/table-th}}    
    {{#> table-th table-th--sortable="true" table-th--modifier="pf-m-width-30" table-th--asc="true"}}
      Repositories
    {{/table-th}}
    {{#> table-th table-th--sortable="true"}}
      Branches
    {{/table-th}} 
    {{#> table-th table-th--sortable="true"}}
      Pull requests
    {{/table-th}} 
    {{#> table-th table-th--sortable="true"}}
      Workspaces
    {{/table-th}} 
    {{#> table-th table-th--sortable="true"}}
      Last Commit
    {{/table-th}} 
    {{#> table-th table-th--blank="true"}}
    {{/table-th}} 
    {{#> table-th table-th--blank="true"}}
    {{/table-th}} 
  {{/table-thead}}

  {{#> table-tbody}}
    {{#> table-tr table-tr--attribute='aria-expanded="true" aria-level="1" aria-posinset="1" aria-setsize="1"'}}
      {{#> table-td table-td--toggle="true" table-td--expanded="true"}}
      {{/table-td}}
      {{#> table-td table-td--check="true"}}
        {{#> check pf-c-check-type="checkbox" name="check row 1" aria-label="checkbox 1"}}
        {{/check}}
      {{/table-td}}      
      {{#> table-td table-td--data-label="Repository Name"}}
        <div>Node 1</div>
        <a href="#">siemur/test-space</a>
      {{/table-td}}
      {{#> table-td table-td--data-label="Branches"}}
        10
      {{/table-td}}      
      {{#> table-td table-td--data-label="Pull Requests"}}
        25
      {{/table-td}}  
      {{#> table-td table-td--data-label="Workspaces"}}
        5
      {{/table-td}}  
      {{#> table-td table-td--data-label="Last Commit"}}
        2 days ago
      {{/table-td}}  
      {{#> table-td table-td--data-label="Action" table-td--modifier="pf-m-fit-content"}}
        <a href="#">
          Link
        </a>
      {{/table-td}}
      {{#> table-td table-td--action="true"}}
        {{#> button btnClass="pf-m-plain" btnAttributes='aria-label="Overflow menu"'}}
          <i class="fas fa-ellipsis-v"></i>
        {{/button}}
      {{/table-td}}
    {{/table-tr}}

    {{#> table-tr table-tr--expandable="true" table-tr--modifier="pf-m-expanded" table-tr--attribute='aria-level="2" aria-posinset="1" aria-setsize="1"'}}
      {{#> table-td table-td--blank="true"}}
      {{/table-td}}  
      {{#> table-td table-td--blank="true"}}
      {{/table-td}}
      {{#> table-td table-td--attribute='aria-label="This is the first expandable content section"'}}
        <div class="pf-c-table__expandable-row-content">
          content here
        </div>
      {{/table-td}}
      {{#> table-td table-td--attribute='colspan="5" aria-label="This is the second expandable content section"'}}
        <div class="pf-c-table__expandable-row-content">
          Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod
          tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam,
          quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo
          consequat. Duis aute irure dolor in reprehenderit in voluptate velit esse
          cillum dolore eu fugiat nulla pariatur. Excepteur sint occaecat cupidatat non
          proident, sunt in culpa qui officia deserunt mollit anim id est laborum.
        </div>
      {{/table-td}}
      {{#> table-td table-td--blank="true"}}
      {{/table-td}}      
    {{/table-tr}}         
  {{/table-tbody}}

  {{#> table-tbody}}
    {{#> table-tr table-tr--attribute='aria-expanded="false" aria-level="1"'}}
      {{#> table-td table-td--toggle="true"}}
      {{/table-td}}
      {{#> table-td table-td--check="true"}}
        {{#> check pf-c-check-type="checkbox" name="check row 2" aria-label="checkbox 2"}}
        {{/check}}
      {{/table-td}}      
      {{#> table-td table-td--data-label="Repository Name"}}
        <div>Node 1</div>
        <a href="#">siemur/test-space</a>
      {{/table-td}}
      {{#> table-td table-td--data-label="Branches"}}
        10
      {{/table-td}}      
      {{#> table-td table-td--data-label="Pull Requests"}}
        25
      {{/table-td}}  
      {{#> table-td table-td--data-label="Workspaces"}}
        5
      {{/table-td}}  
      {{#> table-td table-td--data-label="Last Commit"}}
        2 days ago
      {{/table-td}}  
      {{#> table-td table-td--data-label="Action" table-td--modifier="pf-m-fit-content"}}
        <a href="#">
          Link
        </a>
      {{/table-td}}
      {{#> table-td table-td--action="true"}}
        {{#> button btnClass="pf-m-plain" btnAttributes='aria-label="Overflow menu"'}}
          <i class="fas fa-ellipsis-v"></i>
        {{/button}}
      {{/table-td}}
    {{/table-tr}}

    {{#> table-tr table-tr--expandable="true" table-tr--attribute='aria-level="2" aria-posinset="1" aria-setsize="1" aria-hidden="true" hidden'}}
      {{#> table-td table-td--blank="true"}}
      {{/table-td}}  
      {{#> table-td table-td--blank="true"}}
      {{/table-td}}  
      {{#> table-td table-td--attribute='colspan="4" aria-label="This is an expandable section content"'}}
        <div class="pf-c-table__expandable-row-content">
          expandable content
        </div>
      {{/table-td}}
      {{#> table-td table-td--attribute='aria-label="This is an expandable section content"'}}
        <div class="pf-c-table__expandable-row-content">
          content here
        </div>
      {{/table-td}}
      {{#> table-td table-td--attribute='aria-label="This is an expandable section content"'}}
        <div class="pf-c-table__expandable-row-content">
          content here
        </div>
      {{/table-td}}
      {{#> table-td table-td--blank="true"}}
      {{/table-td}}
    {{/table-tr}}
  {{/table-tbody}}
{{/table}}

{{#> table-tr table-tr--attribute='role="row"' table-tr--IsNested=(unlessIfEqualsBool table--IsTree-view--level "1") table-tr--IsTreeExpandable=(unlessIfAnyBool table-tr--tree--IsLeaf table-tr--HasNoPosinset table--HasNoPosinset)}}
  {{#> table-th table-th--modifier="pf-v6-c-table__tree-view-title-cell"}}
    {{#> table-tree-view-main}}
      {{#unlessIfAny table-tr--tree--IsLeaf table-tr--HasNoPosinset table--HasNoPosinset}}
        {{> table-td table-td--IsToggle=true table-td--type='span'}}
      {{/unlessIfAny}}
      {{#unless table-tr--tree--HasNoCheckbox}}
        {{#if table-tree-view--HasCheckboxes}}
          {{#> table-td table-td--type='span' table-td--IsCheckbox=true}}
            {{> check
              check--IsStandalone=true
              check--IsLabelWrapped=true
              check--id=(ternary table-cell-check--id table-cell-check--id (dasherize table--id 'level' table--IsTree-view--level 'level' table-tr--tree--index 'check'))
            }}
          {{/table-td}}
        {{/if}}
      {{/unless}}

      {{#if table-tr--tree--HasActions}}
        {{#> table-td table-td--IsAction=true}}
          {{> menu-toggle
              menu-toggle--id=(concat table--id '-actions-main')
              menu-toggle--IsPlain=true
              menu-toggle--IsSmall=table--IsCompact
              menu-toggle--HasKebab=(ternary menu-toggle--icon false true)
              menu-toggle--aria-label='Table actions'
            }}
        {{/table-td}}
      {{/if}}

      {{#> table-tree-view-text}}
        {{#if table-tree-view--HasIcons}}
          {{#> table-tree-view-icon}}
            {{#if table-tr--tree--IsLeaf}}
              <i class="fas fa-fw fa-leaf" aria-hidden="true"></i>
            {{else}}
              <i class="fas fa-fw fa-folder" aria-hidden="true"></i>
            {{/if}}
          {{/table-tree-view-icon}}
        {{/if}}
        {{#> table-text table-text--attribute=(concat table--id '-node-' table-tr--tree--index)}}
          {{#if table-tr--tree--title}}
            {{{table-tr--tree--title}}}
          {{else}}
            Datacenters
          {{/if}}
        {{/table-text}}
      {{/table-tree-view-text}}
      {{> table-tree-view-details-toggle}}
      {{#if @partial-block}}
        {{> @partial-block}}
      {{/if}}
    {{/table-tree-view-main}}
  {{/table-th}}
  {{#> table-td table-td--data-label="Migration assessment"}}
    10
  {{/table-td}}
  {{#> table-td table-td--data-label="Size of VM"}}
    25
  {{/table-td}}
  {{#> table-td table-td--data-label="Number of Data Stores"}}
    5
  {{/table-td}}
  {{!-- TODO: fix this after merge --}}
  {{#if table--HasActions}}
    {{#> table-td table-td--IsAction=true}}
      {{> menu-toggle
        menu-toggle--id=(concat table--id '-actions-' table-tr--tree--index)
        menu-toggle--IsPlain=true
        menu-toggle--IsSmall=table--IsCompact
        menu-toggle--HasKebab=(ternary menu-toggle--icon false true)
        menu-toggle--aria-label='Table actions'
      }}
    {{/table-td}}
  {{/if}}
{{/table-tr}}

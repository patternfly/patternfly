{{#if table-td--IsFavorited}}
  {{#> button button--modifier="pf-m-plain" button--attribute=(concat 'aria-label="Starred" id="' table--id '-favorite-button' table-tr--index '" aria-labelledby="' table--id '-node' table-tr--index ' ' table--id '-favorite-button' table-tr--index '"')}}
    <i class="fas fa-star" aria-hidden="true"></i>
  {{/button}}
{{else}}
  {{#> button button--modifier="pf-m-plain" button--attribute=(concat 'aria-label="Not starred" id="' table--id '-favorite-button' table-tr--index '" aria-labelledby="' table--id '-node' table-tr--index ' ' table--id '-favorite-button' table-tr--index '"')}}
    <i class="fas fa-star" aria-hidden="true"></i>
  {{/button}}
{{/if}}

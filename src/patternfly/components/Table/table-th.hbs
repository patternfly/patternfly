<th class="{{#if table-th--toggle}}pf-c-table__toggle pf-m-shrink {{else if table-th--check}}pf-c-table__check pf-m-shrink {{else if table-th--action}}pf-c-table__action pf-m-shrink {{else if table-th--blank}}pf-m-blank {{else if table-th--sortable}}pf-c-table__sort {{#if table-th--asc}}pf-m-ascending {{else if table-th--desc}}pf-m-descending {{else}}{{/if}}{{/if}}{{#if table-th--modifier}}{{table-th--modifier}}{{/if}}"
 
  {{#if table-th--blank}}
    tabindex="-1"
    aria-hidden="true"
  {{/if}}

  {{#if table-th--sortable}}
    {{#if table-th--asc}}
      aria-sort="ascending"
    {{else if table-th--desc}}
      aria-sort="descending"
    {{else}}
      aria-sort="none"
    {{/if}}
  {{/if}}

  {{#if table-th--attribute}}
    {{{table-th--attribute}}}
  {{/if}}>

  {{!-- <i class="fas fa-chevron-down"></i> --}}
  {{> @partial-block}}
  {{#if table-th--sortable}}
    <span class="pf-c-table__sort-indicator">
    {{#if table-th--asc}}
      <i class="fas fa-angle-up"></i>
    {{else if table-th-desc}}
      <i class="fas fa-angle-down"></i>
    {{else}}
      <i class="fas fa-sort"></i>
    {{/if}}
    </span>
  {{/if}}
</th>

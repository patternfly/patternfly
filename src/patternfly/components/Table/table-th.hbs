<th class="{{pfv}}table__th
  {{#if table-th--modifier}} {{table-th--modifier}}{{/if}}
  {{#if table-th--compound-expansion-toggle}} {{pfv}}table__compound-expansion-toggle{{/if}}
  {{#if table-th--sortable}} {{pfv}}table__sort{{/if}}
  {{#if table-th--IsSortable}} {{pfv}}table__sort{{/if}}
  {{#if table-th--IsStickyLeft}} {{pfv}}table__sticky-cell pf-m-left{{/if}}
  {{#if table-th--IsStickyRight}} {{pfv}}table__sticky-cell pf-m-right{{/if}}
  {{#if table-th--toggle}} {{pfv}}table__toggle{{/if}}
  {{#if table-th--check}} {{pfv}}table__check{{/if}}
  {{#if table-th--action}} {{pfv}}table__action{{/if}}
  {{#if table-th--icon}} {{pfv}}table__icon{{/if}}
  {{#if table-th--sortable-wrap}} pf-m-wrap{{/if}}
  {{#if table-th--IsWrap}} pf-m-wrap{{/if}}
  {{#if table-th--selected}} pf-m-selected{{/if}}
  {{#if table-th--IsColumnHelp}} pf-m-help{{/if}}
  {{#if table-th--IsFavorite}} pf-m-favorite{{/if}}"
  {{#if table--grid}}
    {{#if table-th--isRowHeader}}
      role="rowheader"
    {{else}}
      role="columnheader"
    {{/if}}
  {{/if}}
  {{#if table-th--sortable}}
    {{#if table-th--asc}}
      aria-sort="ascending"
    {{else if table-th--desc}}
      aria-sort="descending"
    {{else}}
      aria-sort="none"
    {{/if}}
  {{/if}}
  {{#if table-th--data-label}}
    data-label="{{table-th--data-label}}"
  {{/if}}
  {{#if table-th--IsNode}}
    id="{{table--id}}-node{{table-tr--index}}"
  {{/if}}
  {{#if table-th--attribute}}
    {{{table-th--attribute}}}
  {{/if}}>
  {{#if table-th--IsColumnHelp}}
    <div class="{{pfv}}table__column-help">
  {{/if}}
  {{#if table-th--sortable}}
    {{#> table-button}}
      {{#> table-button-content}}
        {{#> table-text}}
          {{#if table-th--IsFavorite}}
            <i class="fas fa-star" aria-hidden="true"></i>
          {{else}}
            {{> @partial-block}}
          {{/if}}
        {{/table-text}}
        {{#> table-sort-indicator}}
          {{#if table-th--selected}}
            {{#if table-th--asc}}
              <i class="fas fa-long-arrow-alt-up"></i>
            {{else}}
              <i class="fas fa-long-arrow-alt-down"></i>
            {{/if}}
          {{else}}
            <i class="fas fa-arrows-alt-v"></i>
          {{/if}}
        {{/table-sort-indicator}}
      {{/table-button-content}}
    {{/table-button}}
  {{else if table-th--compound-expansion-toggle}}
    {{#> table-button table-button--attribute=table-th--button--attribute}}
      {{#> table-text}}
        {{> @partial-block}}
      {{/table-text}}
    {{/table-button}}
  {{else if table-th--IsColumnHelp}}
    {{#> table-text}}
      {{> @partial-block}}
    {{/table-text}}
  {{else}}
    {{> @partial-block}}
  {{/if}}
  {{#if table-th--IsColumnHelp}}
    {{> table-column-help-action}}
    </div>
  {{/if}}
</th>

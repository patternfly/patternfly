<td{{#if table-td--toggle}} class="pf-c-table__toggle"{{else if table-td--check}} class="pf-c-table__check"{{else if table-td--action}} class="pf-c-table__action"{{else if table-td--modifier}} class="{{table-td--modifier}}"{{/if}}

  {{#if table-td--attribute}}
    {{{table-td--attribute}}}
  {{/if}}

  {{#if table-td--data-label}}
    data-label="{{table-td--data-label}}"
  {{/if}}>

  {{#if table-td--toggle}}
    <button class="pf-c-button pf-m-plain{{#if table-tr--expanded}} pf-m-expanded{{/if}}" {{#if table-td--button-attribute}}{{{table-td--button-attribute}}}{{/if}} {{#if table-tr--expanded}}aria-expanded="true"{{/if}}>
      <i class="fas fa-angle-down"></i>
    </button>
  {{/if}}
  {{> @partial-block}}
</td>

{{#> data-toolbar-item data-toolbar-item--modifier=(concat 'pf-m-search-filter ' data-toolbar-item-search-filter--modifier)}}
  {{#> input-group input-group--attribute=(concat 'aria-label="search filter" role="group"')}}
    {{#> dropdown id=(concat data-toolbar--id '-' button--id) dropdown--HasToggleIcon="true"}}
      {{#> dropdown-toggle-text}}
        Name
      {{/dropdown-toggle-text}}
    {{/dropdown}}
    {{#> form-control controlType="input" input="true" form-control--attribute=(concat 'type="text" id="' data-toolbar--id '-' button--id '-search-filter-input" name="' data-toolbar--id '-search-filter-input" aria-label="input with dropdown and button" aria-describedby="' data-toolbar--id '-' button--id '-button"')}}
    {{/form-control}}
  {{/input-group}}
{{/data-toolbar-item}}
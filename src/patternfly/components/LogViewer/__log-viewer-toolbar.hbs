{{#> log-viewer-header __log-viewer-toolbar--IsMatch=log-viewer--IsMatch}}
  {{#> toolbar toolbar--id=(concat log-viewer--id '-toolbar') toolbar--attribute='role="toolbar"'}}
    {{#> toolbar-content}}
      {{#> toolbar-content-section toolbar-content-section--modifier="pf-m-nowrap"}}
        {{#> toolbar-item toolbar-item--modifier="pf-m-search-filter"}}
          {{> menu-toggle
              menu-toggle--text='System log'
              menu-toggle--id=(dasherize log-viewer--id 'log-menu-toggle')
              menu-toggle--aria-label='Log viewer menu toggle'
            }}

        {{/toolbar-item}}
        {{#> toolbar-group toolbar-group--modifier="pf-m-toggle-group pf-m-show-on-lg"}}
          {{> toolbar-toggle toolbar-toggle--icon="search"}}
          {{> __log-viewer-toolbar-search-filter __log-viewer-toolbar-search-filter--Width="268px"}}
        {{/toolbar-group}}
        {{#> toolbar-item toolbar-item--modifier="pf-m-gap-none"}}
          {{#> button button--IsLink=true button--icon="pause"}}
            Pause
          {{/button}}
        {{/toolbar-item}}
        {{#> toolbar-item toolbar-item--modifier="pf-m-align-end pf-m-hidden-on-lg pf-m-gap-none"}}
          {{> menu-toggle
              menu-toggle--IsPlain=true
              menu-toggle--HasKebab=true
              menu-toggle--id=(dasherize log-viewer--id 'hint')
              menu-toggle--aria-label='Hint menu toggle'
            }}
        {{/toolbar-item}}
        {{#> toolbar-group toolbar-group--modifier="pf-m-icon-button-group pf-m-align-end pf-m-hidden pf-m-visible-on-lg"}}
          {{#> toolbar-item}}
            {{#> button button--IsLink=true}}
              Clear log
            {{/button}}
          {{/toolbar-item}}
          {{#> toolbar-item}}
            {{> menu-toggle menu-toggle--IsPlain=true menu-toggle--icon='cog' menu-toggle--id=(dasherize log-viewer--id 'menu-toggle')}}
          {{/toolbar-item}}
          {{#> toolbar-item}}
            {{> button button--IsPlain=true button--IsIcon=true button--icon="external-link-alt" button--attribute='aria-label="Open external link"'}}
          {{/toolbar-item}}
          {{#> toolbar-item}}
            {{> button button--IsPlain=true button--IsIcon=true button--icon="download" button--attribute='aria-label="Download"'}}
          {{/toolbar-item}}
          {{#> toolbar-item}}
            {{> button button--IsPlain=true button--IsIcon=true button--icon="expand" button--attribute='aria-label="Full screen"'}}
          {{/toolbar-item}}
        {{/toolbar-group}}
      {{/toolbar-content-section}}
      {{#> toolbar-expandable-content}}
        {{> __log-viewer-toolbar-search-filter __log-viewer-toolbar-search-filter--Width="24ch"}}
      {{/toolbar-expandable-content}}
    {{/toolbar-content}}
  {{/toolbar}}
{{/log-viewer-header}}

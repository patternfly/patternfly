{{#> dropdown dropdown--id=(concat log-viewer--id '-dropdown')}}
  {{> dropdown-toggle dropdown-toggle--IsPlain="true"}}
  {{#> menu menu--modifier="pf-m-drilldown pf-m-align-right" menu--attribute='style="--pf-c-menu--Width: 200px;"'}}
    {{#> menu-content menu-content--attribute=menu--Drilldown--menu__content--attribute menu--attribute=''}}
      {{#> menu-list menu-content--attribute=''}}
        {{> menu-list-item menu-list-item--text="Clear log"}}
        {{> divider}}
        {{#> menu-list-item}}
          {{#> menu-item menu-item--type="div"}}
            {{#> menu-item-main}}
              {{#> check}}
                {{#> check-input check-input--attribute=(concat 'id="' log-viewer--id '-desktop-check-wrap-lines" name="' log-viewer--id '-desktop-check-wrap-lines"')}}{{/check-input}}
                {{#> check-label check-label--attribute=(concat 'for="' log-viewer--id '-desktop-check-wrap-lines"')}}Wrap lines{{/check-label}}
              {{/check}}
            {{/menu-item-main}}
          {{/menu-item}}
        {{/menu-list-item}}
        {{#> menu-list-item}}
          {{#> menu-item menu-item--type="div"}}
            {{#> menu-item-main}}
              {{#> check}}
                {{#> check-input check-input--attribute=(concat 'id="' log-viewer--id '-desktop-check-show-timestamps" name="' log-viewer--id '-desktop-check-show-timestamps"')}}{{/check-input}}
                {{#> check-label check-label--attribute=(concat 'for="' log-viewer--id '-desktop-check-show-timestamps"')}}Show timestamps{{/check-label}}
              {{/check}}
            {{/menu-item-main}}
          {{/menu-item}}
        {{/menu-list-item}}
        {{#> menu-list-item}}
          {{#> menu-item menu-item--type="div"}}
            {{#> menu-item-main}}
              {{#> check}}
                {{#> check-input check-input--attribute=(concat 'id="' log-viewer--id '-desktop-check-line-number" name="' log-viewer--id '-desktop-check-line-number"')}}{{/check-input}}
                {{#> check-label check-label--attribute=(concat 'for="' log-viewer--id '-desktop-check-line-number"')}}Display line number{{/check-label}}
              {{/check}}
            {{/menu-item-main}}
          {{/menu-item}}
        {{/menu-list-item}}
        {{> divider}}
        {{#> menu-list-item menu-list-item--IsCurrentPath=menu--Drilldown--IsDrilledIn--list-1 menu-list-item--IsExpandable="true" menu-item--IsExpanded=menu--Drilldown--IsDrilledIn--list-1 menu-list-item--text="Launch" menu-list-item--IsDrillDown="true"}}
          {{#> menu menu--IsSubmenu="true" menu--IsDrilledIn=menu--Drilldown--IsDrilledIn--list-2 menu--modifier="" menu--id=(concat menu--Drilldown--id  '-list-1') menu--attribute=''}}
            {{> menu-list-item newcontext menu-list-item--IsDrillUp="true" menu-list-item--text="Launch" menu-item--attribute='tabindex="0"'}}
            {{> divider divider--type="li"}}
            {{> menu-list-item newcontext menu-list-item--text="Launch option 1"}}
            {{> menu-list-item newcontext menu-list-item--text="Launch option 2"}}
            {{> menu-list-item newcontext menu-list-item--text="Launch option 3"}}
          {{/menu}}
        {{/menu-list-item}}
        {{> menu-list-item menu-list-item--text="Download"}}
        {{> menu-list-item menu-list-item--text="Full screen"}}
      {{/menu-list}}
    {{/menu-content}}
  {{/menu}}
{{/dropdown}}

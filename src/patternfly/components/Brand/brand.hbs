{{#if brand--IsPicture}}
  <picture class="{{pfv}}brand pf-m-picture
    {{#if brand--modifier}} {{brand--modifier}}{{/if}}
    {{#if brand--IsDark}} 
      pf-theme-toggle--dark
    {{else}}
      pf-theme-toggle--light
    {{/if}}"
    {{#if brand--attribute}}
      {{{brand--attribute}}}
    {{/if}}>
    {{#if brand--img-url-on-2xl}}
      <source media="(min-width: 1450px)" srcset="{{brand--img-url-on-2xl}}">
    {{/if}}
    {{#if brand--img-url-on-xl}}
      <source media="(min-width: 1200px)" srcset="{{brand--img-url-on-xl}}">
    {{/if}}
    {{#if brand--img-url-on-lg}}
      <source media="(min-width: 992px)" srcset="{{brand--img-url-on-lg}}">
    {{/if}}
    {{#if brand--img-url-on-md}}
      <source media="(min-width: 768px)" srcset="{{brand--img-url-on-md}}">
    {{/if}}
    {{#if brand--img-url-on-sm}}
      <source media="(min-width: 576px)" srcset="{{brand--img-url-on-sm}}">
    {{/if}}
    {{#if brand--img-url}}
      <source srcset="{{brand--img-url}}">
    {{/if}}
    {{#if brand--img-url--base}}
      <img src="{{brand--img-url--base}}" alt="Fallback patternFly default logo">
    {{else}}
      <img src="/assets/images/pf_logo.svg" alt="Fallback patternFly default logo">
    {{/if}}
  </picture>
{{else}}
  <img class="{{pfv}}brand{{#if brand--modifier}} {{brand--modifier}}{{/if}}"
    {{#if brand--attribute}}
      {{{brand--attribute}}}
    {{/if}}>
{{/if}}

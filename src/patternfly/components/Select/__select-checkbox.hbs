<div class="pf-c-select__menu{{#if select-multi--modifier}} {{select-multi--modifier}}{{/if}}"
  {{#unless select--IsExpanded}}hidden{{/unless}}
  {{#if select-multi--attribute}}
    {{{select-multi-attribute}}}
  {{/if}}>
  {{#> select-menu-fieldset select-menu-fieldset--attribute='aria-label="Select input"'}}
    {{#> select-menu-item-check select-menu-item-check--name="active" select-menu-item-check--description="This is a description" select-menu-item-check--modifier=" pf-m-description"}}
      Active
    {{/select-menu-item-check}}
    {{#> select-menu-item-check select-menu-item-check--name="canceled" select-menu-item-check--description="This is a really long description that describes the menu item. This is a really long description that describes the menu item." select-menu-item-check--modifier=" pf-m-description"}}
      Canceled
    {{/select-menu-item-check}}
    {{#> select-menu-item-check select-menu-item-check--name="paused"}}
      Paused
    {{/select-menu-item-check}}
    {{#> select-menu-item-check select-menu-item-check--name="warning"}}
      Warning
    {{/select-menu-item-check}}
    {{#> select-menu-item-check select-menu-item-check--name="restarted"}}
      Restarted
    {{/select-menu-item-check}}
  {{/select-menu-fieldset}}
</div>

{{#if toolbar-item-expand-all--IsExpanded}}
  {{#> toolbar-item toolbar-item--modifier="pf-m-expand-all pf-m-expanded"}}
    {{#> button button--modifier="pf-m-plain" button--attribute='aria-label="Collapse all"'}}
      {{> toolbar-expand-all-icon}}
    {{/button}}
  {{/toolbar-item}}
{{else}}
  {{#> toolbar-item toolbar-item--modifier="pf-m-expand-all"}}
    {{#> button button--modifier="pf-m-plain" button--attribute='aria-label="Expand all"'}}
      {{> toolbar-expand-all-icon}}
    {{/button}}
  {{/toolbar-item}}
{{/if}}

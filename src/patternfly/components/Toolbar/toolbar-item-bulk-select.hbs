{{#> toolbar-item toolbar-item--modifier="pf-m-bulk-select"}}
  {{#> menu-toggle
      menu-toggle--IsCheck=true
      menu-toggle--IsSplitButton=true
      menu-toggle--id=(concat toolbar--id '-check')
    }}
    {{#> menu-toggle-button menu-toggle--id=(concat toolbar--id '-menu-toggle') menu-toggle-button--IsToggle=true}}
      {{#> menu-toggle-controls}}
        {{> menu-toggle-toggle-icon}}
      {{/menu-toggle-controls}}
    {{/menu-toggle-button}}
  {{/menu-toggle}}
{{/toolbar-item}}

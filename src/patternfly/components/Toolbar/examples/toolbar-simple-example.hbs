{{#> c-toolbar}}
  {{#> dropdown id="toolbar-simple-dropdown-simple-example-collapsed" dropdown--HasToggleIcon="true" dropdown--modifier="pf-c-toobar__bulk-select"}}
    <input type="checkbox">
  {{/dropdown}}
  {{#> dropdown id="toolbar-simple-dropdown-simple-example-collapsed" dropdown-toggle--modifier="pf-m-plain" dropdown--modifier="pf-c-toolbar__filter-toggle" aria-label="Filter results"}}
    <i class="fas fa-filter"></i>
  {{/dropdown}}
  {{#> input-group input-group--modifier="pf-c-toolbar__filter"}}
    {{#> select id="toolbar-simple-select-single"}}<i class="fas fa-filter" aria-hidden="true"></i> Name{{/select}}
    {{#> form-control controlType="input" input="true" form-control--attribute='type="text" id="toolbar-simple-dropdown-simple-textInput10" name="textInput10"  placeholder="Filter..." aria-label="filter input with popup button"'}}
    {{/form-control}}
    {{#> button button--modifier="pf-m-tertiary" button--attribute='id="toolbar-simple-dropdown-simple-textAreaButton2"'}}
      {{> button-icon button-icon--type="search"}}
    {{/button}}
  {{/input-group}}
  {{#> options-menu id="toolbar-simple-options-menu-example" options-menu--label-text="Sort methods" options-menu--modifier="pf-c-toolbar__sort"}}
    {{#> options-menu-toggle options-menu-toggle--modifier="pf-m-plain" options-menu-toggle--attribute='aria-label="Sort by"'}}
      <i class="fas fa-sort-amount-down" aria-hidden="true"></i>
    {{/options-menu-toggle}}
    {{> options-menu-multiple}}
  {{/options-menu}}
  {{#> c-toolbar-action-group}}
    {{#> button button--modifier="pf-m-primary"}}
      action
    {{/button}}
    {{#> button button--modifier="pf-m-link"}}
      secondary
    {{/button}}
  {{/c-toolbar-action-group}}
  {{#> dropdown id="toolbar-simple-dropdown-simple-example-collapsed3" dropdown--modifier="pf-c-toolbar__action-list" dropdown--HasKebabIcon="true" dropdown-toggle--modifier="pf-m-plain"}}
  {{/dropdown}}
  <div class="pf-c-toolbar__current">17 Items</div>
  {{#> chip-group chip-group--modifier="pf-c-toolbar__filter-list"}}
  {{/chip-group}}
{{/c-toolbar}}

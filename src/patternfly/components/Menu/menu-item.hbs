<{{#if menu-item--IsLink}}a{{else if menu-item--type}}{{menu-item--type}}{{else if menu-list-item--IsCheckbox}}label{{else}}button{{/if}} class="{{pfv}}menu__item{{#if menu-item--modifier}} {{menu-item--modifier}}{{/if}}
  {{~#if menu-list-item--IsCurrent}} pf-m-current{{/if}}"
  {{#if menu-list-item--IsCheckbox}}
    for="{{menu--id}}-check-{{menu-list-item--id}}"
  {{else}}
    {{#if menu-item--IsLink}}
      href="#"
      {{#if menu-list-item--IsDisabled}}
        aria-disabled="true"
        tabindex="-1"
      {{/if}}
    {{else}}
      type="button"
      {{#if menu-list-item--IsDisabled}}
        disabled
      {{/if}}
    {{/if}}
    role="menuitem"
  {{/if}}
  {{#if menu-item--attribute}}
    {{{menu-item--attribute}}}
  {{/if}}
  {{!-- aria-expanded value can still be passed manually --}}
  {{#if menu-list-item--IsExpandable}}
    {{#if menu-item--IsExpanded}}
      aria-expanded="true"
    {{else}}
      aria-expanded="false"
    {{/if}}
  {{/if}}>
  {{#if menu-list-item--IsCheckbox}}
    {{#> menu-item-main}}
      {{#> menu-item-check}}
        {{#> check check--type="span" check--modifier="pf-m-standalone" check--IsDisabled=menu-list-item--IsDisabled}}
          {{> check-input check-input--attribute=(concat 'id="' menu--id '-check-' menu-list-item--id '" name="' menu--id '-check-' menu-list-item--id '"')}}
        {{/check}}
      {{/menu-item-check}}
      {{#> menu-item-text}}
        {{{menu-item--text}}}
      {{/menu-item-text}}
    {{/menu-item-main}}
  {{else}}
    {{#if @partial-block}}
      {{> @partial-block}}
    {{/if}}
  {{/if}}
</{{#if menu-item--IsLink}}a{{else if menu-item--type}}{{menu-item--type}}{{else if menu-list-item--IsCheckbox}}label{{else}}button{{/if}}>

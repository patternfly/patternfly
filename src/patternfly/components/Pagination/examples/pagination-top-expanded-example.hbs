{{#> pagination}}
  {{#> pagination-total-items}}
    <b>1 - 10</b> of <b>37</b>
  {{/pagination-total-items}}

  {{#> options-menu options-menu--IsExpanded="true" id="pagination-options-menu-top-expanded-example" options-menu--label-text="Items per page" options-menu--IsText="true"}}
    {{#> options-menu-toggle options-menu-toggle--type="div" options-menu-toggle--modifier="pf-m-plain"}}
      <span class="pf-c-options-menu__toggle-text">
        <b>1 - 10</b> of <b>37</b>
      </span>
      {{> options-menu-toggle-button aria-label="Select"}}
    {{/options-menu-toggle}}
    {{#> options-menu-menu}}
      <li>
        <button class="pf-c-options-menu__menu-item">
          10&nbsp;<span class="pf-c-pagination__menu-text">per page</span>
          <i class="fas fa-check pf-c-options-menu__menu-item-icon" aria-hidden="true"></i>
        </button>
      </li>
      <li>
        <button class="pf-c-options-menu__menu-item pf-m-selected">
          20&nbsp;<span class="pf-c-pagination__menu-text">per page</span>
        </button>
      </li>
      <li>
        <button class="pf-c-options-menu__menu-item">
          50&nbsp;<span class="pf-c-pagination__menu-text">per page</span>
        </button>
      </li>
    {{/options-menu-menu}}
  {{/options-menu}}

  {{#> pagination-nav}}
    {{#> button button--modifier="pf-m-plain pf-m-disabled" button--attribute='aria-label="Go to first page" aria-disabled="true"'}}
      {{> button-icon button-icon--type="angle-double-left"}}
    {{/button}}
    {{#> button button--modifier="pf-m-plain pf-m-disabled" button--attribute='aria-label="Go to previous page" aria-disabled="true"'}}
      {{> button-icon button-icon--type="angle-left"}}
    {{/button}}

    {{#> pagination-nav-page-select}}
      {{> form-control input="true" controlType="input" form-control--attribute='aria-label="Current page" type="number" min="1" max="4" value="1"'}}
      <span aria-hidden="true">of 4</span>
    {{/pagination-nav-page-select}}

    {{#> button button--modifier="pf-m-plain" button--attribute='aria-label="Go to next page"'}}
      {{> button-icon button-icon--type="angle-right"}}
    {{/button}}
    {{#> button button--modifier="pf-m-plain" button--attribute='aria-label="Go to last page"'}}
      {{> button-icon button-icon--type="angle-double-right"}}
    {{/button}}
  {{/pagination-nav}}
{{/pagination}}

<div class="{{pfv}}tabs__scroll-button{{#if tabs-scroll-button--modifier}} {{tabs-scroll-button--modifier}}{{/if}}"
  {{#if tabs-scroll-button--attribute}}
    {{{tabs-scroll-button--attribute}}}
  {{/if}}
  {{#if tabs-scroll-button--IsHidden}}
    aria-hidden="true"
  {{/if}}>
  {{#> button button--IsPlain=true button--IsDisabled=tabs-scroll-button--IsDisabled button--aria-label=(ternary tabs-scroll-button--IsLeft "Scroll left" "Scroll right")}}
    {{#if tabs-scroll-button--IsLeft}}
      <i class="fas fa-angle-left" aria-hidden="true"></i>
    {{else }}
      <i class="fas fa-angle-right" aria-hidden="true"></i>
    {{/if}}
  {{/button}}
</div>
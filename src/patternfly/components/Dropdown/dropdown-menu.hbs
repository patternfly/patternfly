<{{#if dropdown-menu--type}}{{dropdown-menu--type}}{{else}}ul{{/if}} class="pf-c-dropdown__menu{{#if dropdown-menu--modifier}} {{dropdown-menu--modifier}}{{/if}}"
  {{#unless dropdown--template--SplitButton}}
    {{#unless dropdown-menu--type}}
      aria-labelledby="{{dropdown--id}}-button"
    {{/unless}}
  {{/unless}}
  {{#unless dropdown--IsExpanded}}
    hidden
  {{/unless}}
  {{#if dropdown-menu--attribute}}
    {{{dropdown-menu--attribute}}}
  {{/if}}>
  {{#if @partial-block}}
    {{> @partial-block}}
  {{/if}}
</{{#if dropdown-menu--type}}{{dropdown-menu--type}}{{else}}ul{{/if}}>

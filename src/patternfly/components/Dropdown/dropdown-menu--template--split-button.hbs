{{#> dropdown-menu}}
  {{#if dropdown-menu--IsBulkSelect}}
    {{> dropdown-menu-list-item dropdown-menu-item--text="Select all"}}
    {{> dropdown-menu-list-item dropdown-menu-item--text="Select none"}}
    {{> dropdown-menu-list-item dropdown-menu-item--text="Other action"}}
  {{else}}
    {{> dropdown-menu-list-item dropdown-menu-item--text="Actions" dropdown-menu-item--HasIcon=dropdown-menu--HasIcons}}
    {{> dropdown-menu-list-item dropdown-menu-item--text="Disabled action" dropdown-menu-item--icon="bell" dropdown-menu-item--attribute="disabled" dropdown-menu-item--HasIcon=dropdown-menu--HasIcons}}
    {{> dropdown-menu-list-item dropdown-menu-item--text="Other action" dropdown-menu-item--icon="cubes" dropdown-menu-item--HasIcon=dropdown-menu--HasIcons}}
  {{/if}}
{{/dropdown-menu}}

<div class="pf-c-dropdown__menu{{#if dropdown-multi-select--modifier}} {{ddropdown-multi-select--modifier}}{{/if}}"
  {{#unless dropdown--IsExpanded}}hidden{{/unless}}
  {{#if dropdown-multi-select--attribute}}
    {{{dropdown-multi-select--attribute}}}
  {{/if}}>
  <form class="pf-c-form">
  <fieldset class="pf-c-form__fieldset" aria-labelledby="{{id}}-label">
    {{#> check check--type="label" check--modifier="pf-c-dropdown__menu-item" check--attribute=(concat 'for="' id '-apples"')}}
      {{#> check-input check-input--attribute=(concat 'type="checkbox" id="' id '-apples" name="fruit"')}}{{/check-input}}
      {{#> check-label check-label--type="span"}}Apples{{/check-label}}
    {{/check}}
    {{#> check check--type="label" check--modifier="pf-c-dropdown__menu-item" check--attribute=(concat 'for="' id '-oranges"')}}
      {{#> check-input check-input--attribute=(concat 'type="checkbox" id="' id '-oranges" name="fruit" checked')}}{{/check-input}}
      {{#> check-label check-label--type="span"}}Oranges{{/check-label}}
    {{/check}}
    {{#> check check--type="label" check--modifier="pf-c-dropdown__menu-item pf-m-disabled" check--attribute=(concat 'for="' id '-bananas"')}}
      {{#> check-input check-input--attribute=(concat 'type="checkbox" id="' id '-bananas" name="fruit" disabled')}}{{/check-input}}
      {{#> check-label check-label--type="span" check-label--modifier="pf-m-disabled"}}Bananas{{/check-label}}
    {{/check}}
    <div class="pf-c-dropdown__separator" role="separator"></div>
    {{#> check check--type="label" check--modifier="pf-c-dropdown__menu-item" check--attribute=(concat 'for="' id '-carrots"')}}
      {{#> check-input check-input--attribute=(concat 'type="checkbox" id="' id '-carrots" name="fruit"')}}{{/check-input}}
      {{#> check-label check-label--type="span"}}Carrots{{/check-label}}
    {{/check}}
  </fieldset>
  </form>
</div>

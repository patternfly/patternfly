{{#> dropdown-toggle dropdown--IsSplitButton="true" dropdown-toggle--HasNoToggleIcon="true" dropdown-toggle--type="div"}}

  {{!-- checkbox --}}
  {{#if dropdown-toggle--HasCheckBox}}
    {{> dropdown-toggle-check dropdown-toggle-check--aria-label="Select all"}}
  {{/if}}

  {{!-- bulk select --}}
  {{#if dropdown-menu--IsBulkSelect}}
    {{> dropdown-toggle-check dropdown-toggle-check--aria-label="Select all"}}
  {{/if}}

  {{!-- action --}}
  {{#if dropdown-toggle--HasActionButton}}
    {{#> dropdown-toggle-button}}
      {{#if dropdown-toggle-button--text}}
        {{{dropdown-toggle-button--text}}}
      {{else}}
        Action
      {{/if}}
    {{/dropdown-toggle-button}}
  {{/if}}

  {{!-- icon button --}}
  {{#if dropdown-toggle--HasIconButton}}
    {{#> dropdown-toggle-button dropdown-toggle-button--aria-label="Settings"}}
      <i class="fas fa-cog" aria-hidden="true"></i>
    {{/dropdown-toggle-button}}
  {{/if}}

  {{!-- content --}}
  {{#if @partial-block}}
    {{> @partial-block}}
  {{/if}}

  {{!-- toggle --}}
  {{> dropdown-toggle-button dropdown--IsToggleButton="true" dropdown--aria-label="Select"}}
{{/dropdown-toggle}}

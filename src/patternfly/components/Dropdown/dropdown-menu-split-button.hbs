<ul class="pf-c-dropdown__menu{{#if dropdown-menu--modifier}} {{dropdown-menu--modifier}}{{/if}}"
  aria-labelledby="{{id}}-toggle-button"
  {{#unless dropdown--IsExpanded}}hidden{{/unless}}
  {{#if dropdown-menu--attribute}}
	  {{{dropdown-menu--attribute}}}
  {{/if}}>
  {{#if dropdown--IsBulkSelect}}
    <li>
      {{#> dropdown-menu-item}}Select all{{/dropdown-menu-item}}
    </li>
    <li>
      {{#> dropdown-menu-item}}Select none{{/dropdown-menu-item}}
    </li>
    <li>
      {{#> dropdown-menu-item}}Other action{{/dropdown-menu-item}}
    </li>
  {{else}}
    <li>
      {{#if dropdown--HasItemIcons}}
        {{#> dropdown-menu-item dropdown-menu-item--modifier="pf-m-icon"}}
          {{#> dropdown-menu-item-icon}}
            <i class="fas fa-cog" aria-hidden="true"></i>
          {{/dropdown-menu-item-icon}}
          Action
        {{/dropdown-menu-item}}
      {{else}}
        {{#> dropdown-menu-item}}
          Action
        {{/dropdown-menu-item}}
      {{/if}}
    </li>
    <li>
      {{#if dropdown--HasItemIcons}}
        {{#> dropdown-menu-item dropdown-menu-item--modifier="pf-m-icon" dropdown-menu-item--attribute="disabled"}}
          {{#> dropdown-menu-item-icon}}
            <i class="fas fa-bell" aria-hidden="true"></i>
          {{/dropdown-menu-item-icon}}
          Disabled action
        {{/dropdown-menu-item}}
      {{else}}
        {{#> dropdown-menu-item dropdown-menu-item--attribute="disabled"}}
          Disabled action
        {{/dropdown-menu-item}}
      {{/if}}
    </li>
    <li>
      {{#if dropdown--HasItemIcons}}
        {{#> dropdown-menu-item dropdown-menu-item--modifier="pf-m-icon"}}
          {{#> dropdown-menu-item-icon}}
            <i class="fas fa-cubes" aria-hidden="true"></i>
          {{/dropdown-menu-item-icon}}
          Other action
        {{/dropdown-menu-item}}
      {{else}}
        {{#> dropdown-menu-item}}
          Other action
        {{/dropdown-menu-item}}
      {{/if}}
    </li>
  {{/if}}
</ul>

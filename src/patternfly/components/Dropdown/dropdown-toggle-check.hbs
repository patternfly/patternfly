<label class="pf-c-dropdown__toggle-check{{#if dropdown-toggle-check--modifier}} {{dropdown-toggle-check--modifier}}{{/if}}"
  for="{{dropdown-toggle-check--id}}"
  {{#if dropdown-toggle-check--attribute}}
	  {{{dropdown-toggle-check--attribute}}}
  {{/if}}>
  <input type="checkbox" id="{{dropdown-toggle-check--id}}"
    {{#if dropdown-toggle--IsDisabled}}
      disabled
    {{/if}}
    {{#if aria-label}}
      aria-label="{{aria-label}}"
    {{/if}}
    {{#if dropdown--CheckboxIsChecked}}
      checked
    {{/if}}
    {{#if dropdown--IsSplitButtonText}}
      aria-labelledby="{{dropdown-toggle-check--id}} {{dropdown-toggle-check--id}}-text"
    {{/if}}>
  {{#if dropdown--IsSplitButtonText}}
    {{#> dropdown-toggle-text dropdown-toggle-text--attribute=(concat 'aria-hidden="true" id="' dropdown-toggle-check--id '-text"')}}
      {{{dropdown--IsSplitButtonText}}}
    {{/dropdown-toggle-text}}
  {{/if}}
</label>
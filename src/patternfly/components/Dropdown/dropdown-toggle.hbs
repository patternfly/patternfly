<{{# if dropdown-toggle--type}}{{dropdown-toggle--type}}{{else}}button{{/if}} class="pf-c-dropdown__toggle
  {{~#if dropdown--IsSplitButton}}
    {{~#if dropdown-toggle--IsDisabled}}
      pf-m-disabled
    {{/if}}
  {{/if}}
  {{~#if dropdown-toggle--modifier}}
    {{dropdown-toggle--modifier}}
  {{/if}}
  {{~#if dropdown-toggle--IsPlain}}
    pf-m-plain
  {{/if}}
  {{~#if dropdown-toggle--IsBadge}}
    pf-m-plain
  {{/if}}
  {{~#if dropdown--IsSplitButton}}
    pf-m-split-button
  {{/if}}
  {{~#if dropdown--IsActionButton}}
    pf-m-action
  {{/if}}
  {{~#if dropdown-toggle--IsPlainText}}
    pf-m-plain pf-m-text
  {{/if}}"
  {{#unless dropdown--template--SplitButton}}
    id="{{dropdown--id}}-button"
    aria-expanded="{{#if dropdown--IsExpanded}}true{{else}}false{{/if}}"
    type="button"
    {{#if dropdown-toggle--IsDisabled}}
      disabled
    {{/if}}
  {{/unless}}

  {{#if dropdown-toggle--IsPlain}}
    aria-label="Actions"
  {{/if}}

  {{#if dropdown-toggle--attribute}}
    {{{dropdown-toggle--attribute}}}
  {{/if}}>

  {{#if dropdown-toggle--IsPlain}}
    {{> dropdown-kebab-icon}}

  {{else if dropdown-toggle--IsBadge}}
    {{> dropdown-toggle--Badge}}

  {{else}}
    {{#if dropdown-toggle--text}}
      {{#> dropdown-toggle-text}}
        {{dropdown-toggle--text}}
      {{/dropdown-toggle-text}}
    {{/if}}
    {{#if @partial-block}}
      {{> @partial-block}}
    {{/if}}
    {{#unless dropdown-toggle--HasNoToggleIcon}}
      {{> dropdown-toggle-icon}}
    {{/unless}}
  {{/if}}
</{{# if dropdown-toggle--type}}{{dropdown-toggle--type}}{{else}}button{{/if}}>

{{#> about-modal-box about-modal-box--attributes='aria-labelledby="aboutModalTitle"'}}
  {{#> about-modal-box-brand}}
    <img src="/assets/images/pf_mini_logo_white.svg" alt="Patternfly brand logo" />
  {{/about-modal-box-brand}}
  {{#> about-modal-box-close about-modal-box-close--attributes='aria-label="Close Dialog"'}}
    {{#> button btnClass="pf-m-action"}}
      <i class="fas fa-times"></i> 
    {{/button}}
  {{/about-modal-box-close}}
  {{#> about-modal-box-header}}
    {{#> title titleType="h2" pf-c-title--Modifier="pf-m-md "}}
        Trademark and copyright information here
    {{/title}}
    {{#> title titleType="h1" pf-c-title--Modifier="pf-m-xxxxl" pf-c-title--ID="aboutModalTitle"}}
        Product Name
    {{/title}}
  {{/about-modal-box-header}}
  {{#> about-modal-box-hero}}
    <img src="/assets/images/pfbg_992.jpg" alt="Patternfly Background Image">
  {{/about-modal-box-hero}}
  {{#> about-modal-box-logo}}
    {{#> about-modal-box-logo-image}}
      <img src="/assets/images/pf_logo.svg" alt="Product Logo">
    {{/about-modal-box-logo-image}}
  {{/about-modal-box-logo}}
  {{#> about-modal-box-content}}
    content
  {{/about-modal-box-content}}
{{/about-modal-box}}

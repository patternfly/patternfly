<{{#if helper-text--IsList}}ul{{else}}div{{/if}} class="{{pfv}}helper-text
  {{#if helper-text--IsHidden}} pf-m-hidden{{/if}}
  {{#if helper-text--modifier}} {{helper-text--modifier}}{{/if}}"
  {{#if helper-text--IsList}}
    role="list"
  {{/if}}
  {{#if helper-text--attribute}}
    {{{helper-text--attribute}}}
  {{/if}}>
  {{#if helper-text--value}}
    {{> helper-text-item}}
  {{else if @partial-block}}
    {{> @partial-block}}
  {{/if}}
</{{#if helper-text--IsList}}ul{{else}}div{{/if}}>

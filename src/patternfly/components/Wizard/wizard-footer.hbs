<footer class="{{pfv}}wizard__footer{{#if wizard-footer--modifier}} {{wizard-footer--modifier}}{{/if}}"
  {{#if wizard-footer--attribute}}
    {{{wizard-footer--attribute}}}
  {{/if}}>
  {{#> action-list}}
    {{#> action-list-group}}
      {{#> action-list-item}}
        {{#> button button--modifier="pf-m-secondary"}}
          Back
        {{/button}}
      {{/action-list-item}}
      {{#> action-list-item}}
        {{#> button button--modifier="pf-m-primary"}}
          Next
        {{/button}}
      {{/action-list-item}}
    {{/action-list-group}}
    {{#> action-list-group}}
      {{#> action-list-item}}
        {{#> button button--modifier="pf-m-link"}}
          Cancel
        {{/button}}
      {{/action-list-item}}
    {{/action-list-group}}
  {{/action-list}}
</footer>

<footer class="{{pfv}}wizard__footer{{#if wizard-footer--modifier}} {{wizard-footer--modifier}}{{/if}}"
  {{#if wizard-footer--attribute}}
    {{{wizard-footer--attribute}}}
  {{/if}}>
  {{#> button button--modifier="pf-m-secondary"}}
    Back
  {{/button}}
  {{#> button button--modifier="pf-m-primary" button--IsSubmit="true"}}

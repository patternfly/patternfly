<svg class="{{pfv}}spinner{{#if spinner--modifier}} {{spinner--modifier}}{{/if}}"
  role="progressbar"
  viewBox="0 0 100 100"
  {{#if spinner--aria-labelledby}}
    aria-labelledby="{{aria-labelledby}}"
  {{/if}}
  {{#if spinner--aria-describedby}}
    aria-labelledby="{{aria-describedby}}"
  {{/if}}
  {{#if @partial-block}}
    aria-label="{{> @partial-block}}"
  {{/if}}
  {{#if spinner--attribute}}
    {{{spinner--attribute}}}
  {{/if}}>
  <circle class="{{pfv}}spinner__path" cx="50" cy="50" r="45" fill="none"></circle>
</svg>

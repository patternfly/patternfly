      {{> button-icon button-icon--type="times"}}
    {{/button}}
    {{#> alert-title}}
      {{#> screen-reader}}warning:{{/screen-reader}}
      The server configuration changed.
    {{/alert-title}}
  {{/alert-body}}
  
{{/alert}}

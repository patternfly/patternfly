  {{/alert-icon}}
  {{#> alert-body alert-body--attribute='role="alert"'}}
    {{#> alert-title}}
      {{#> screen-reader}}danger:{{/screen-reader}}
        Failed to add server_abc.
      {{/alert-title}}
  {{/alert-body}}
{{/alert}}

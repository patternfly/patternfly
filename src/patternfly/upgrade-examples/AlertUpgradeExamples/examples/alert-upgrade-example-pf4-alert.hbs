{{#> alert-upgrade-example}}
{{#> alert alert--modifier="pf-m-success" alert--attribute='aria-label="Success Alert"'}}
  {{#> alert-icon alert-icon--type="check-circle"}}
  {{/alert-icon}}
    {{#> alert-title}}
      {{#> screen-reader}}Success:{{/screen-reader}}
        Great Job!
    {{/alert-title}}
    {{#> alert-description}}
			This is really working out <a href="#">great for us.</a>
		{{/alert-description}}
{{/alert}}
<br>
{{#> alert alert--modifier="pf-m-danger" alert--attribute='aria-label="Danger Alert"'}}
  {{#> alert-icon alert-icon--type="exclamation-circle"}}
  {{/alert-icon}}
    {{#> alert-title}}
      {{#> screen-reader}}Danger:{{/screen-reader}}
      Hey there is a problem!
    {{/alert-title}}
    {{#> alert-description}}
			Yeah this is really messed up and you should <a href="#">know about it.</a>
		{{/alert-description}}
{{/alert}}
<br>
{{#> alert alert--modifier="pf-m-warning" alert--attribute='aria-label="Warning Alert"'}}
  {{#> alert-icon alert-icon--type="exclamation-triangle"}}
  {{/alert-icon}}
    {{#> alert-title}}
      {{#> screen-reader}}Warning:{{/screen-reader}}
      There might be a problem here!
    {{/alert-title}}
    {{#> alert-description}}
			We are not really sure, but it <a href="#">might be bad.</a>
		{{/alert-description}}
{{/alert}}
<br>
{{#> alert alert--modifier="pf-m-info" alert--attribute='aria-label="Information Alert"'}}
  {{#> alert-icon alert-icon--type="info-circle"}}
  {{/alert-icon}}
    {{#> alert-title}}
      {{#> screen-reader}}Info:{{/screen-reader}}
      This is some general information.
    {{/alert-title}}
    {{#> alert-description}}
			You should <a href="#">know about this.</a>
		{{/alert-description}}
{{/alert}}
{{/alert-upgrade-example}}
{{#> wizard-modal}}
{{#> wizard-finite}}

{{#> modal}}
  {{#> backdrop}}
    {{#> bullseye}}
      {{#> modal-box modal-box--modifier="pf-m-lg pf-m-dark pf-u-w-75-on-sm" modal-box--attribute='aria-labelledby="wizard-step5-title" aria-describedby="wizard-step5-description"'}}
        {{#> wizard-finite-header}}
          {{#> modal-box-close}}
            {{#> button button--modifier="pf-m-plain" button--attribute='aria-label="Close Dialog"'}}
              <i class="fas fa-times"></i>
            {{/button}}
          {{/modal-box-close}}

          {{#> wizard-finite-title-area}}
            {{#> title titleType="h1" title--modifier="pf-m-2xl" title--attribute='id="wizard-step5-title"'}}
                Wizard title
            {{/title}}
            {{#> wizard-finite-description}}
              {{#> title titleType="h2"  title--attribute='id="wizard-step5-description"'}}
                Wizard description
              {{/title}}
            {{/wizard-finite-description}}
          {{/wizard-finite-title-area}}


            <div class="pf-c-wizard-finite__sequence">
              {{#> sequence sequence--attribute='aria-label="sequence"'}}
                {{#> sequence-control sequence-control--modifier="pf-m-start" sequence-control--attribute='aria-label="Start"'}}
                  {{#> sequence-control-icon sequence-control-icon--start="true"}}
                  {{/sequence-control-icon}}
                {{/sequence-control}}
                {{#> sequence-list}}
                  {{#> sequence-item}}
                    {{#> sequence-link sequence-link--attribute='href="#"'}}
                      {{#> sequence-content}}
                        {{#> sequence-content-title}}Information{{/sequence-content-title}}
                        {{#> sequence-content-status}}Status{{/sequence-content-status}}
                      {{/sequence-content}}
                    {{/sequence-link}}
                  {{/sequence-item}}
                  {{#> sequence-item}}
                    {{#> sequence-link sequence-link--attribute='href="#"'}}
                      {{#> sequence-content}}
                        {{#> sequence-content-title}}Configuration{{/sequence-content-title}}
                        {{#> sequence-content-status}}Status{{/sequence-content-status}}
                      {{/sequence-content}}
                    {{/sequence-link}}
                  {{/sequence-item}}
                  {{#> sequence-item}}
                    {{#> sequence-link sequence-link--modifier="pf-m-current" sequence-link--attribute='href="#"'}}
                      {{#> sequence-content}}
                        {{#> sequence-content-title}}Review{{/sequence-content-title}}
                        {{#> sequence-content-status}}Status{{/sequence-content-status}}
                      {{/sequence-content}}
                    {{/sequence-link}}
                  {{/sequence-item}}
                {{/sequence-list}}
                {{#> sequence-control sequence-control--modifier="pf-m-end" sequence-control--attribute='aria-label="End"'}}
                  {{#> sequence-control-icon sequence-control-icon--end="true"}}
                  {{/sequence-control-icon}}
                {{/sequence-control}}
              {{/sequence}}
            </div>

        {{/wizard-finite-header}}
        
        {{#> wizard-finite-content}}
          {{#> stack}}
            {{#> stack-item}}
              {{#> wizard-finite-icon wizard-finite-icon--modifier="pf-m-success pf-u-text-align-center" wizard-finite-icon--attribute='aria-hidden="true"'}}
                fas fa-check-circle
              {{/ wizard-finite-icon}}
            {{/stack-item}}
            {{#> stack-item}}
              {{#> title titleType="h1" title--modifier="pf-m-2xl pf-u-text-align-center"}}
                Configuration successful
              {{/title}}
            {{/stack-item}}
            {{#> stack-item}}
              <p class="pf-u-mt-xl">Phasellus tempus. Ut id nisl quis enim dignissim sagittis. Quisque ut nisi. Sed magna purus, fermentum eu, tincidunt eu, varius ut, felis. Suspendisse pulvinar, augue ac venenatis condimentum, sem libero volutpat nibh, nec pellentesque velit pede quis nunc. Nunc egestas, augue at pellentesque laoreet, felis eros vehicula leo, at malesuada velit leo quis pede.
              </p>
            {{/stack-item}}
            {{#> stack-item}}
              <div class="pf-u-text-align-center pf-u-mt-lg">
                {{#> button button--modifier="pf-m-primary"}}
                  View Project
                {{/button}}  
              </div>
            {{/stack-item}}
            {{#> stack-item}}
              <div class="pf-u-text-align-center pf-u-mt-md">
                {{#> button button--modifier="pf-m-link"}}
                  Close
                {{/button}}  
              </div>
            {{/stack-item}}
          {{/stack}}
        {{/wizard-finite-content}}  

      {{/modal-box}}
    {{/bullseye}}
  {{/backdrop}}
{{/modal}}

{{/wizard-finite}}
{{/wizard-modal}}

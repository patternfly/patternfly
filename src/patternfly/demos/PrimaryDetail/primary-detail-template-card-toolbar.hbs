{{#> toolbar toolbar--id=(concat primary-detail-template-card-toolbar--id "-card-toolbar")}}
  {{#> toolbar-content}}
    {{#> toolbar-content-section}}
      {{#> toolbar-item}}
        {{> menu-toggle menu-toggle--text="Dropdown" menu-toggle--attribute="style='width: 150px'" menu-toggle--id=(concat toolbar--id '-select-dropdown')}}
      {{/toolbar-item}}
      {{#> toolbar-item toolbar-item--modifier=(concat 'pf-m-pagination ' toolbar-item-pagination--modifier)}}
        {{#> pagination}}
          {{#> pagination-total-items}}
            <b>1 - 10</b> of <b>37</b>
          {{/pagination-total-items}}
          {{> pagination-menu-toggle pagination-menu-toggle--id=(concat toolbar--id '-pagination-menu-toggle')}}
        {{/pagination}}
      {{/toolbar-item}}
    {{/toolbar-content-section}}
    {{> toolbar-expandable-content}}
  {{/toolbar-content}}
{{/toolbar}}

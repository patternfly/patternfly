{{> page-demo-default}}
{{#> alert-group alert-group--modifier="pf-m-toast"}}
  {{#> alert-item}}
    {{#> alert alert--modifier="pf-m-success pf-m-live" alert--attribute='aria-label="Success alert"'}}
      {{#> alert-icon alert-icon--type="check-circle"}}
      {{/alert-icon}}
      {{#> alert-content alert-content--attribute='aria-atomic="false" aria-live="polite" aria-relevant="additions text"'}}
        {{#> alert-title}}
          {{#> screen-reader}}Success alert:{{/screen-reader}}
          Newest notification
        {{/alert-title}}
        {{#> alert-description}}
          This is a description of the notification content.
        {{/alert-description}}
      {{/alert-content}}
      {{#> alert-action}}
        {{#> button button--modifier="pf-m-plain" button--attribute='aria-label="Close success alert: Newest notification"'}}
          {{> button-icon button-icon--type="times"}}
        {{/button}}
      {{/alert-action}}
    {{/alert}}
  {{/alert-item}}
  {{#> alert-item}}
    {{#> alert alert--modifier="pf-m-warning pf-m-live" alert--attribute='aria-label="Warning alert"'}}
      {{#> alert-icon alert-icon--type="exclamation-triangle"}}
      {{/alert-icon}}
      {{#> alert-content alert-content--attribute='aria-atomic="false" aria-live="polite" aria-relevant="additions text"'}}
        {{#> alert-title}}
          {{#> screen-reader}}Info alert:{{/screen-reader}}
          Second newest notification
        {{/alert-title}}
        {{#> alert-description}}
          This is a description of the notification content.
        {{/alert-description}}
      {{/alert-content}}
      {{#> alert-action}}
        {{#> button button--modifier="pf-m-plain" button--attribute='aria-label="Close warning alert: second newest notification"'}}
          {{> button-icon button-icon--type="times"}}
        {{/button}}
      {{/alert-action}}
    {{/alert}}
  {{/alert-item}}
  {{#> alert-item}}
    {{#> alert alert--modifier="pf-m-danger pf-m-live" alert--attribute='aria-label="Danger alert"'}}
      {{#> alert-icon alert-icon--type="exclamation-circle"}}
      {{/alert-icon}}
      {{#> alert-content alert-content--attribute='aria-atomic="false" aria-live="polite" aria-relevant="additions text"'}}
        {{#> alert-title}}
          {{#> screen-reader}}Last notification{{/screen-reader}}
          Last notification
        {{/alert-title}}
        {{#> alert-description}}
          This is a description of the notification content.
        {{/alert-description}}
      {{/alert-content}}
      {{#> alert-action}}
        {{#> button button--modifier="pf-m-plain" button--attribute='aria-label="Close danger alert: Last notification"'}}
          {{> button-icon button-icon--type="times"}}
        {{/button}}
      {{/alert-action}}
    {{/alert}}
  {{/alert-item}}
{{/alert-group}}

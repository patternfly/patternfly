{{#> wrapper tab-content--id=tabs--pod-tab-content--id}}
  {{#if tabs--pod-tab-content--IsSecondary}}
    {{#> tab-content tab-content--IsActive="true" tab-content--attribute=(concat 'aria-labelledby="' tab-content--id '-pod-info-link" id="' tab-content--id '-pod-info-panel"')}}
      {{> @partial-block}}
    {{/tab-content}}
    {{#> tab-content tab-content--IsHidden="true" tab-content--attribute=(concat 'aria-labelledby="' tab-content--id '-editable-aspects-link" id="' tab-content--id '-editable-aspects-panel"')}}
      Editable aspects panel
    {{/tab-content}}
  {{else}}
    {{#> tab-content tab-content--IsActive="true" tab-content--attribute=(concat 'aria-labelledby="' tab-content--id '-details-link" id="' tab-content--id '-details-panel"')}}
      {{> @partial-block}}
    {{/tab-content}}
    {{#> tab-content tab-content--attribute=(concat 'aria-labelledby="' tab-content--id '-yaml-link" id="' tab-content--id '-yaml-panel"')}}
      YAML panel
    {{/tab-content}}
    {{#> tab-content tab-content--attribute=(concat 'aria-labelledby="' tab-content--id '-environment-link" id="' tab-content--id '-environment-panel"')}}
      Environment panel
    {{/tab-content}}
    {{#> tab-content tab-content--attribute=(concat 'aria-labelledby="' tab-content--id '-logs-link" id="' tab-content--id '-logs-panel"')}}
      Logs panel
    {{/tab-content}}
    {{#> tab-content tab-content--attribute=(concat 'aria-labelledby="' tab-content--id '-events-link" id="' tab-content--id '-events-panel"')}}
      Events panel
    {{/tab-content}}
    {{#> tab-content tab-content--attribute=(concat 'aria-labelledby="' tab-content--id '-terminal-link" id="' tab-content--id '-terminal-panel"')}}
      Terminal panel
    {{/tab-content}}
  {{/if}}
{{/wrapper}}

{{#> page-header-tools}}
  {{#> toolbar}}
    {{#> toolbar-group toolbar-group--modifier="pf-u-sr-only pf-u-visible-on-lg"}}
      {{#> toolbar-item}}
        {{#> button button--modifier="pf-m-plain" button--HasBellIcon="true" pagelayout-icon--bell="true" button--attribute='aria-label="Notifications"'}}
        {{/button}}
      {{/toolbar-item}}
      {{#> toolbar-item}}
        {{#> button button--modifier="pf-m-plain" button--HasCogIcon="true" button--attribute='aria-label="Settings"'}}
        {{/button}}
      {{/toolbar-item}}
    {{/toolbar-group}}
    {{#> toolbar-group}}
      {{#> toolbar-item toolbar-item--modifier="pf-u-hidden-on-lg pf-u-mr-0"}}
        {{#> button button--modifier="pf-m-plain" button--HasEllipsisIcon="true" button--attribute='aria-label="Overflow actions"'}}
        {{/button}}
      {{/toolbar-item}}
      {{#> toolbar-item toolbar-item--modifier="pf-u-sr-only pf-u-visible-on-md"}}
        {{#> dropdown id=(concat page--id '-dropdown') dropdown-toggle--modifier="pf-m-plain" dropdown--HasToggleIcon="true"}}
          Kyle Baker
        {{/dropdown}}
      {{/toolbar-item}}
    {{/toolbar-group}}
  {{/toolbar}}
  {{#> avatar avatar--attribute='src="/assets/images/img_avatar.svg" alt="Avatar Image"'}}{{/avatar}}
{{/page-header-tools}}

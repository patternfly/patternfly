{
  "name": "@patternfly/patternfly",
  "description": "Assets, source, tooling, and content for PatternFly 4",
  "version": "0.0.0-development",
  "keywords": [],
  "license": "MIT",
  "scripts": {
    "build-patternfly": "gulp buildPatternfly",
    "build": "gulp build",
    "build:docs": "gulp buildWebpack",
    "build:pficons": "gulp pfIcons",
    "build:pficonfont": "gulp pfIconFont",
    "clean": "gulp clean",
    "dev": "gulp develop",
    "develop": "gulp develop",
    "format": "prettier --trailing-comma es5 --no-semi --single-quote --write src/**/*.js",
    "lint": "npm run lint:css && npm run lint:styles && npm run lint:js",
    "lint:size": "node .circleci/css-size-report/sizeReport run",
    "lint:css": "gulp lintCSS",
    "lint:fix": "npm run lint:js --fix && npm run lint:styles --fix",
    "lint:sass": "stylelint 'src/**/*.scss'",
    "lint:js": "eslint .",
    "precommit": "lint-staged",
    "sassdoc": "sassdoc ./src/patternfly/**/*.scss --parse > sassdoc/data.json",
    "screenshots": "rimraf src/generated/**/*.png && theme-patternfly-org screenshots --urlPrefix http://localhost:5000",
    "serve": "serve public",
    "start": "gulp develop",
    "test": "patternfly-a11y --config patternfly-a11y.config",
    "update-modifiers": "./scripts/extractModifiers.sh",
    "semantic-release": "semantic-release"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.1.0",
    "@commitlint/config-conventional": "^7.3.1",
    "@fortawesome/fontawesome": "^1.1.8",
    "@octokit/rest": "^16.40.1",
    "@mdx-js/util": "^1.6.16",
    "@patternfly/patternfly-a11y": "^2.0.4",
    "@patternfly/react-core": "^4.47.0",
    "@patternfly/react-styles": "^4.7.3",
    "@patternfly/react-table": "^4.16.7",
    "babel-eslint": "^8.2.3",
    "cheerio": "^1.0.0-rc.3",
    "commander": "^5.1.0",
    "cssnano": "^4.1.10",
    "eslint": "^4.9.0",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-config-prettier": "^2.9.0",
    "eslint-config-standard": "^11.0.0",
    "eslint-config-standard-jsx": "^5.0.0",
    "eslint-config-standard-react": "^6.0.0",
    "eslint-import-resolver-alias": "^1.0.3",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-jsx-a11y": "^6.3.1",
    "eslint-plugin-node": "^6.0.1",
    "eslint-plugin-prettier": "^2.6.0",
    "eslint-plugin-promise": "^3.7.0",
    "eslint-plugin-react": "^7.7.0",
    "eslint-plugin-standard": "^3.0.1",
    "fs-extra": "^5.0.0",
    "glob": "^7.1.2",
    "gulp": "^4.0.2",
    "gulp-cli": "^2.2.0",
    "gulp-iconfont": "^10.0.3",
    "gulp-iconfont-css": "^3.0.0",
    "gulp-postcss": "^8.0.0",
    "gulp-rename": "^1.4.0",
    "gulp-sourcemaps": "^2.6.5",
    "html-formatter": "^0.1.9",
    "husky": "^1.3.1",
    "lint-staged": "^9.2.5",
    "node-plop": "^0.18.0",
    "node-sass": "^4.11.0",
    "postcss": "^7.0.18",
    "postcss-css-variables": "^0.13.0",
    "postcss-preset-env": "^6.7.0",
    "prettier": "^1.12.1",
    "react": "^16.8.0",
    "react-dom": "^16.8.0",
    "remark-parse": "^8.0.3",
    "remark-stringify": "^8.1.0",
    "rimraf": "^3.0.2",
    "sass-graph": "^3.0.4",
    "semantic-release": "17.0.4",
    "stylelint": "^13.6.1",
    "stylelint-config-recommended-scss": "^4.2.0",
    "stylelint-config-standard": "^20.0.0",
    "stylelint-order": "^4.1.0",
    "stylelint-scss": "^3.18.0",
    "stylelint-value-no-unknown-custom-properties": "^3.0.0",
    "surge": "^0.21.3",
    "theme-patternfly-org": "^0.1.20",
    "unified": "^9.2.0",
    "webpack": "^4.43.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/patternfly/patternfly.git"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/",
    "tag": "prerelease"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ],
    "*.scss": [
      "stylelint --fix",
      "git add"
    ]
  }
}

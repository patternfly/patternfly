{
  "name": "@patternfly/patternfly",
  "description": "Assets, source, tooling, and content for PatternFly 4",
  "version": "0.0.0-development",
  "keywords": [],
  "license": "MIT",
  "main": "n/a",
  "scripts": {
    "backstop:approve": "node test/approve-conflicts.js",
    "backstop:init": "node test/create-references.js",
    "bootstrap:build": "node npm-scripts/build-bootstrap-workspace.js",
    "build-patternfly": "gulp build",
    "build": "gatsby build",
    "build:pficons": "gulp pfIcons",
    "build:pficonfont": "gulp pfIconFont",
    "build:ie11": "gulp ie",
    "clean": "gatsby clean",
    "cli:setup": "cd build/patternfly-cli && npm install && cd ../../ && npm link ./build/patternfly-cli",
    "dev": "gatsby develop",
    "dev:expose": "gatsby develop -H 0.0.0.0",
    "develop": "gatsby develop",
    "format": "prettier --trailing-comma es5 --no-semi --single-quote --write src/**/*.js",
    "lint": "npm run lint:styles && npm run lint:js",
    "lint:fix": "npm run lint:js --fix && npm run lint:styles --fix",
    "lint:styles": "stylelint 'src/**/*.scss'",
    "lint:js": "eslint .",
    "precommit": "lint-staged",
    "sassdoc": "sassdoc ./src/patternfly/**/*.scss --parse > sassdoc/data.json",
    "serve": "gatsby serve",
    "start": "npm run develop",
    "test": "node test/test.js",
    "gen:sitemap": "node ./generateSitemap",
    "audit:a11y": "node ./test-a11y/",
    "a11y": "npm run gen:sitemap && npm run audit:a11y",
    "test:ci": "start-server-and-test dev \"http://localhost:8000\" a11y",
    "update-modifiers": "./build/extractModifiers.sh",
    "semantic-release": "semantic-release"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ],
    "*.scss": [
      "stylelint --fix",
      "git add"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^8.1.0",
    "@commitlint/config-conventional": "^7.3.1",
    "@fortawesome/fontawesome": "^1.1.8",
    "@mdx-js/mdx": "^1.1.5",
    "@mdx-js/react": "^1.1.5",
    "axe-core": "^3.2.2",
    "axe-webdriverjs": "^2.2.0",
    "axios": "^0.18.1",
    "babel-eslint": "^8.2.3",
    "backstopjs": "^4.1.12",
    "commander": "^2.13.0",
    "del": "^3.0.0",
    "eslint": "^4.9.0",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-config-prettier": "^2.9.0",
    "eslint-config-standard": "^11.0.0",
    "eslint-config-standard-jsx": "^5.0.0",
    "eslint-config-standard-react": "^6.0.0",
    "eslint-import-resolver-alias": "^1.0.3",
    "eslint-plugin-import": "^2.11.0",
    "eslint-plugin-jsx-a11y": "^6.0.2",
    "eslint-plugin-node": "^6.0.1",
    "eslint-plugin-prettier": "^2.6.0",
    "eslint-plugin-promise": "^3.7.0",
    "eslint-plugin-react": "^7.7.0",
    "eslint-plugin-standard": "^3.0.1",
    "fs-extra": "^5.0.0",
    "gatsby": "^2.15.14",
    "gatsby-source-filesystem": "^2.1.22",
    "gatsby-theme-patternfly-org": "^0.0.1",
    "glob": "^7.1.2",
    "gulp": "^4.0.2",
    "gulp-cli": "^2.2.0",
    "gulp-cssnano": "^2.1.3",
    "gulp-header": "^2.0.9",
    "gulp-iconfont": "^10.0.3",
    "gulp-iconfont-css": "^3.0.0",
    "gulp-rename": "^1.4.0",
    "gulp-sass": "^4.0.2",
    "gulp-sass-glob": "^1.1.0",
    "gulp-sourcemaps": "^2.6.5",
    "gulp-string-replace": "^1.1.2",
    "gulp-stylelint": "^9.0.0",
    "handlebars-loader": "^1.7.0",
    "handlebars-utils": "^1.0.6",
    "husky": "^1.3.1",
    "inflection": "^1.12.0",
    "jsdom": "^11.8.0",
    "lint-staged": "^9.2.5",
    "lodash": "^4.17.15",
    "minimist": "^1.2.0",
    "node-plop": "^0.18.0",
    "node-sass": "^4.11.0",
    "node-sass-glob-importer": "^5.3.0",
    "postcss": "^7.0.13",
    "postcss-css-variables": "^0.11.0",
    "postcss-cssnext": "^3.1.0",
    "postcss-preset-env": "^6.5.0",
    "precss": "^3.1.0",
    "prettier": "^1.12.1",
    "pretty": "^2.0.0",
    "prismjs": "^1.15.0",
    "prop-types": "^15.6.0",
    "raw-loader": "^0.5.1",
    "react": "^16.9.0",
    "react-dom": "^16.9.0",
    "react-ionicons": "^2.1.6",
    "react-load-script": "0.0.6",
    "react-prism": "^4.3.2",
    "rehype-react": "^3.0.2",
    "rimraf": "^3.0.0",
    "scaffold-helper": "^1.0.0",
    "selenium-webdriver": "^4.0.0-alpha.1",
    "semantic-release": "^15.13.19",
    "start-server-and-test": "^1.5.0",
    "stylelint": "^9.10.1",
    "stylelint-config-recommended-scss": "^3.0.0",
    "stylelint-config-standard": "^18.0.0",
    "stylelint-order": "^0.8.0",
    "stylelint-scss": "^2.5.0",
    "stylelint-value-no-unknown-custom-properties": "^2.0.0",
    "stylelint-webpack-plugin": "^0.10.5",
    "webpack-notifier": "^1.7.0"
  },
  "engines": {
    "node": ">=8.0.0",
    "npm": ">=5.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/patternfly/patternfly-next.git"
  },
  "release": {
    "branch": "master",
    "analyzeCommits": {
      "preset": "angular"
    },
    "prepare": [
      {
        "path": "@semantic-release/npm",
        "pkgRoot": "dist"
      }
    ],
    "publish": [
      {
        "path": "@semantic-release/npm",
        "pkgRoot": "dist"
      },
      "@semantic-release/github"
    ]
  },
  "resolutions": {
    "node-sass": "4.7.2"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/",
    "tag": "latest"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  }
}
